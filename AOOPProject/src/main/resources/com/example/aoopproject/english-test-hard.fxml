<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.aoopproject.EnglishTestHardController">

    <children>
        <!-- Background -->
        <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Image/CommonPage.png" /></image>
        </ImageView>

        <!-- Header row -->
        <Label fx:id="titleLabel" layoutX="20.0" layoutY="18.0" text="English Test (Hard)">
            <font><Font name="Segoe UI Semibold" size="22" /></font>
        </Label>

        <Label layoutX="675.0" layoutY="30.0" style="-fx-font-weight: bold;" text="Timer:" />
        <Label fx:id="timerLabel" layoutX="725.0" layoutY="26.0" style="-fx-font-size: 16px;" text="1:00" />
        <Label fx:id="progressLabel" layoutX="810.0" layoutY="29.0" text="Q 0/15   Score: 0">
            <font><Font name="Segoe UI" size="16" /></font>
        </Label>

        <!-- Question -->
        <Label fx:id="questionLabel" layoutX="20.0" layoutY="80.0" prefWidth="720.0"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               text="Press Start, listen, and select the correct option." wrapText="true" />

        <!-- Options (2x2 without GridPane) -->
        <Button fx:id="opt1" layoutX="83.0" layoutY="150.0" onAction="#handleOptionClick" prefHeight="60.0" prefWidth="350.0" />
        <Button fx:id="opt2" layoutX="578.0" layoutY="150.0" onAction="#handleOptionClick" prefHeight="60.0" prefWidth="350.0" />
        <Button fx:id="opt3" layoutX="83.0" layoutY="230.0" onAction="#handleOptionClick" prefHeight="60.0" prefWidth="350.0" />
        <Button fx:id="opt4" layoutX="578.0" layoutY="230.0" onAction="#handleOptionClick" prefHeight="60.0" prefWidth="350.0" />

        <!-- Feedback -->
        <Label fx:id="feedbackLabel" layoutX="20.0" layoutY="310.0" prefWidth="720.0"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" text="" />

        <!-- Controls row -->
        <Button fx:id="examStartButton" layoutX="41.0" layoutY="350.0" onAction="#handleExamStart" text="Start â–¶" />
        <Button fx:id="playQuestionButton" disable="true" layoutX="114.0" layoutY="350.0" onAction="#handlePlayQuestion" text="ðŸ”Š Play Question" />
        <Button fx:id="nextButton" disable="true" layoutX="233.0" layoutY="350.0" onAction="#handleNext" text="Next â–¶" />

        <!-- Back (disabled while running; enabled when finished) -->
        <ImageView fitHeight="80.0" fitWidth="100.0" layoutX="855.0" layoutY="323.0" pickOnBounds="true" preserveRatio="true">
            <image><Image url="@Image/BackButton.png" /></image>
        </ImageView>
        <Button fx:id="backButton" layoutX="844.0" layoutY="323.0" onAction="#BackToTest"
                prefHeight="80.0" prefWidth="100.0" style="-fx-background-color: transparent;" />
        <Button fx:id="retryButton" layoutX="740.0" layoutY="350.0" onAction="#handleRetry" text="Retry â†»" disable="true"/>
    </children>
</AnchorPane>
