<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoopproject.EnglishWordMakingController">

    <top>
        <ToolBar>
            <Button onAction="#BackToEnglishFormat" text="Back" />
            <Separator orientation="VERTICAL" />

            <!-- A = Apple, Ant â€¦ (menu stays enabled even while coloring) -->
            <MenuButton fx:id="wordMenu" text="Choose Letter" />
            <Separator orientation="VERTICAL" />

            <ColorPicker fx:id="colorPicker" />
            <ToggleButton fx:id="pencilToggle" text="Pencil" />
            <ToggleButton fx:id="eraserToggle" text="Eraser" />

            <!-- Retry button (text-only), disabled until complete -->
            <Button fx:id="retryButton" disable="true" onAction="#handleRetry" text="ðŸ” Retry" />

            <Separator orientation="VERTICAL" />

            <ProgressBar fx:id="progressBar" prefWidth="220" />
            <Label fx:id="percentLabel" style="-fx-padding: 0 0 0 8;" text="0%" />

            <Pane HBox.hgrow="ALWAYS" />

            <Button fx:id="playVoiceButton" disable="true" onAction="#handlePlayVoice" text="Play Voice" />
        </ToolBar>
    </top>

    <center>
        <StackPane fx:id="canvasHolder" style="-fx-background-color: white;">
            <!-- Paint layer -->
            <Canvas fx:id="drawCanvas" />
            <!-- Sizing layer (outline is a Text node; this canvas stays clear) -->
            <Canvas fx:id="gridCanvas" mouseTransparent="true" />
        </StackPane>
    </center>
</BorderPane>