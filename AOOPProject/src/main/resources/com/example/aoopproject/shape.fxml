<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoopproject.ShapeController">

    <top>
        <ToolBar>
            <Button onAction="#BackToLearn" text="Back" />
            <Separator orientation="VERTICAL" />

            <!-- Always enabled like Uppercase page -->
            <MenuButton fx:id="shapeMenu" text="Shape: â€”" />
            <Separator orientation="VERTICAL" />

            <!-- Named color picker (with swatches) -->
            <ComboBox fx:id="colorBox" prefWidth="170" />
            <Separator orientation="VERTICAL" />

            <ToggleButton fx:id="pencilToggle" text="Pencil" />
            <ToggleButton fx:id="eraserToggle" text="Eraser" />
            <Button fx:id="btnClear" onAction="#handleClear" text="Clear" />

            <!-- NEW: Retry (enabled only after completion) -->
            <Button fx:id="btnRetry" disable="true" onAction="#handleRetry" text="ðŸ” Retry" />

            <Separator orientation="VERTICAL" />

            <ProgressBar fx:id="progressBar" prefWidth="220" />
            <Label fx:id="percentLabel" style="-fx-padding: 0 0 0 8;" text="0%" />

            <Pane HBox.hgrow="ALWAYS" />

            <!-- Mic-icon buttons; text set empty, icon added in controller -->
            <Button fx:id="btnSpeakShape" onAction="#handleSpeakShape" />
            <Button fx:id="btnSpeakColor" onAction="#handleSpeakColor" />
            <Button fx:id="btnSpeakBoth" onAction="#handleSpeakBoth" />
        </ToolBar>
    </top>

    <center>
        <StackPane fx:id="canvasHolder" style="-fx-background-color: white;">
            <Canvas fx:id="drawCanvas" />
            <Canvas fx:id="gridCanvas" mouseTransparent="true" />
        </StackPane>
    </center>
</BorderPane>