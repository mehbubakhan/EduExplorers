<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoopproject.LoginController">

    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="1000.0" layoutX="-6.0" preserveRatio="false">
            <image>
                <Image url="@Gifs/LogSign.gif" />
            </image></ImageView>

        <!-- Username Field -->
        <TextField fx:id="usernameField" layoutX="350.0" layoutY="234.0" prefWidth="300" promptText="Enter Username" />

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" layoutX="350.0" layoutY="287.0" prefWidth="300" promptText="Enter Password" />
        <ImageView fitHeight="63.0" fitWidth="328.0" layoutX="336.0" layoutY="328.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/pink_button.png" />
            </image></ImageView>

        <!-- Login Button -->
        <Button fx:id="loginButton" layoutX="350.0" layoutY="335.0" onAction="#handleLogin" prefHeight="48.0" prefWidth="300" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Log In" textFill="#1f709c">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <ImageView fitHeight="80.0" fitWidth="100.0" layoutX="678.0" layoutY="386.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/BackButton.png" />
            </image></ImageView>

        <!-- Back Button -->
        <Button fx:id="backButton" layoutX="678.0" layoutY="386.0" onAction="#handleBack" prefHeight="80.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
    </children>
</AnchorPane>