<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.aoopproject.EnglishFormatController">

    <children>
        <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/CommonPage.png" />
            </image>
        </ImageView>

        <!-- Uppercase button -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="390.0" layoutY="165.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/pink_button.png" />
            </image>
        </ImageView>
        <Button layoutX="390.0" layoutY="165.0"
                onAction="#NextToUppercaseAlphabet"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;"
                text="UpperCase Letter" textFill="#1f709c">
            <font>
                <Font name="System Bold Italic" size="16.0"/>
            </font>
        </Button>

        <!-- Lowercase -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="390.0" layoutY="232.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Image/pink_button.png"/></image>
        </ImageView>
        <Button layoutX="390.0" layoutY="232.0"
                onAction="#NextToLowercaseAlphabet"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;"
                text="LowerCase Letter" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0"/></font>
        </Button>

        <!-- Word making -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="390.0" layoutY="300.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Image/pink_button.png"/></image>
        </ImageView>
        <Button layoutX="390.0" layoutY="300.0"
                onAction="#NextToWordMaking"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;"
                text="Word Making" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0"/></font>
        </Button>

        <!-- Rhymes -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="390.0" layoutY="365.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Image/pink_button.png"/></image>
        </ImageView>
        <Button layoutX="390.0" layoutY="365.0"
                onAction="#NextToRhyme"
                prefHeight="50.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;"
                text="Rhymes" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0"/></font>
        </Button>

        <!-- Back -->
        <ImageView fitHeight="80.0" fitWidth="100.0" layoutX="759.0" layoutY="435.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Image/BackButton.png"/></image>
        </ImageView>
        <Button layoutX="759.0" layoutY="435.0"
                onAction="#BackToLearn"
                prefHeight="80.0" prefWidth="100.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;"/>

        <!-- Decorative GIFs (optional) -->
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="-86.0" layoutY="40.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif"/></image>
        </ImageView>
        <ImageView fitHeight="120.0" fitWidth="120.0" layoutX="142.0" layoutY="250.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif"/></image>
        </ImageView>
        <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="784.0" layoutY="132.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif"/></image>
        </ImageView>
        <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="362.0" layoutY="480.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif"/></image>
        </ImageView>
        <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="560.0" layoutY="64.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif"/></image>
        </ImageView>
    </children>
</AnchorPane>