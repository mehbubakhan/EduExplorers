<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoopproject.StartupController">

    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="1000.0" preserveRatio="false">
            <image>
                <Image url="@Gifs/LogSign.gif" />
            </image></ImageView>
        <ImageView fitHeight="100.0" fitWidth="180.0" layoutX="410.0" layoutY="178.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/pink_button.png" />
            </image></ImageView>

        <!-- Login Button -->
        <Button fx:id="loginButton" layoutX="420.0" layoutY="197.0" onAction="#handleLogin" prefHeight="61.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Log In" textFill="#1f709c">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font></Button>

        <!-- OR Text -->
        <Text layoutX="488.0" layoutY="307.0" text="OR">
            <font>
                <Font size="18.0" />
            </font></Text>
        <ImageView fitHeight="100.0" fitWidth="180.0" layoutX="410.0" layoutY="321.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/pink_button.png" />
            </image></ImageView>

        <!-- Sign-up Button -->
        <Button fx:id="signupButton" layoutX="420.0" layoutY="340.0" onAction="#handleSignup" prefHeight="61.0" prefWidth="160.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Sign Up" textFill="#1f709c">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font></Button>
        <ImageView fitHeight="80.0" fitWidth="100.0" layoutX="691.0" layoutY="381.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/BackButton.png" />
            </image></ImageView>

        <!-- Back Button -->
        <Button fx:id="backButton" layoutX="691.0" layoutY="381.0" onAction="#handleBack" prefHeight="80.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <font>
                <Font size="14.0" />
            </font></Button>
    </children>
</AnchorPane>