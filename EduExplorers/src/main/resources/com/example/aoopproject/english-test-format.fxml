<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.aoopproject.EnglishTestFormatController">

    <children>
        <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@Image/CommonPage.png" />
            </image>
        </ImageView>

        <Label layoutX="110.0" layoutY="83.0"
               style="-fx-font-size: 26px; -fx-font-weight: bold;"
               text="Select Level First" textFill="#1f709c" />

        <!-- Back icon + button -->
        <ImageView fitHeight="80.0" fitWidth="100.0" layoutX="797.0" layoutY="476.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Image/BackButton.png" /></image>
        </ImageView>
        <Button layoutX="797.0" layoutY="476.0" onAction="#BackToTest"
                prefHeight="80.0" prefWidth="100.0" style="-fx-background-color: transparent;" />

        <!-- UPPERCASE -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="270.0" layoutY="167.0">
            <image><Image url="@Image/pink_button.png" /></image>
        </ImageView>
        <Button layoutX="270.0" layoutY="167.0" onAction="#chooseUppercase"
                prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                text="UPPERCASE" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0" /></font>
        </Button>

        <!-- lowercase -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="545.0" layoutY="167.0">
            <image><Image url="@Image/pink_button.png" /></image>
        </ImageView>
        <Button layoutX="545.0" layoutY="167.0" onAction="#chooseLowercase"
                prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                text="lowercase" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0" /></font>
        </Button>

        <!-- Wordmaking -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="420.0" layoutY="243.0">
            <image><Image url="@Image/pink_button.png" /></image>
        </ImageView>
        <Button layoutX="420.0" layoutY="243.0" onAction="#chooseWordmaking"
                prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                text="Wordmaking" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0" /></font>
        </Button>

        <!-- Medium -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="270.0" layoutY="312.0">
            <image><Image url="@Image/pink_button.png" /></image>
        </ImageView>
        <Button layoutX="270.0" layoutY="312.0" onAction="#chooseMedium"
                prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                text="Medium (Mixed)" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0" /></font>
        </Button>

        <!-- âœ… Hard (wired to #chooseHard) -->
        <ImageView fitHeight="50.0" fitWidth="200.0" layoutX="563.0" layoutY="312.0">
            <image><Image url="@Image/pink_button.png" /></image>
        </ImageView>
        <Button layoutX="563.0" layoutY="312.0" onAction="#chooseHard"
                prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                text="Hard" textFill="#1f709c">
            <font><Font name="System Bold Italic" size="16.0" /></font>
        </Button>

        <!-- Decorative clouds (optional) -->
        <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="55.0" layoutY="385.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif" /></image>
        </ImageView>
        <ImageView fitHeight="180.0" fitWidth="200.0" layoutX="663.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif" /></image>
        </ImageView>
        <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="835.0" layoutY="272.0" pickOnBounds="true" preserveRatio="false">
            <image><Image url="@Gifs/cloud.gif" /></image>
        </ImageView>
    </children>
</AnchorPane>
