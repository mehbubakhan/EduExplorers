<AnchorPane prefHeight="600" prefWidth="1000" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoopproject.EnglishLowerCaseAlphabetController">

    <children>
        <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="false" />
        <!-- Top "toolbar" rebuilt with standalone controls (no BorderPane/ToolBar) -->
        <Button layoutX="16" layoutY="12" onAction="#BackToAlphabetFormat" text="Back" />

        <MenuButton fx:id="alphabetMenu" layoutX="80" layoutY="12" text="Choose Alphabet" />

        <ColorPicker fx:id="colorPicker" layoutX="230" layoutY="12" />

        <ToggleButton fx:id="pencilToggle" layoutX="330" layoutY="12" text="Pencil" />
        <ToggleButton fx:id="eraserToggle" layoutX="395" layoutY="12" text="Eraser" />

        <Button fx:id="retryButton" disable="true" layoutX="460" layoutY="12" onAction="#handleRetry" text="ðŸ” Retry" />

        <ProgressBar fx:id="progressBar" layoutX="540" layoutY="16" prefWidth="220" />
        <Label fx:id="percentLabel" layoutX="770" layoutY="14" style="-fx-padding: 0 0 0 8;" text="0%" />

        <Button fx:id="playVoiceButton" disable="true" layoutX="820" layoutY="12" onAction="#handlePlayVoice" text="Play Voice" />

        <!-- Drawing area (center) -->
        <StackPane fx:id="canvasHolder" layoutX="11.2" layoutY="56" prefHeight="509.0" prefWidth="978.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="11.0" AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="56">
            <children>
                <!-- drawCanvas below, gridCanvas above (mouseTransparent) -->
                <Canvas fx:id="drawCanvas" />
                <Canvas fx:id="gridCanvas" mouseTransparent="true" />
            </children>
        </StackPane>
    </children>
</AnchorPane>